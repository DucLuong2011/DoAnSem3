
@{
    ViewData["Title"] = "Orders";
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
}

<!-- Page Header
============================================= -->
<section class="page-header page-header-text-light bg-secondary">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1>Your Orders</h1>
            </div>
            <div class="col-md-4">
