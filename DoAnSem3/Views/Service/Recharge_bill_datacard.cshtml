@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Recharge_bill_datacard";
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
}




<!-- Content
  ============================================= -->
<div id="content">
