        <!-- Page Header
    ============================================= -->
    <section class="page-header page-header-text-light bg-secondary">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h1>Top Up Phone Card</h1>
                </div>
                <div class="col-md-4">
                    <ul class="breadcrumb justify-content-start justify-content-md-end mb-0">
                        <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="active">Card</li>
                    </ul>
                </div>
            </div>
        </div>
    </section><!-- Page Header end -->
    <section class="container">
        <div class="bg-light shadow-md rounded p-4">
            <div class="row">
                <!-- DTH Recharge -->
                @if (@HttpContextAccessor.HttpContext.Session.GetString("LoginCustomer") != null)
                {
                    <div class="col-lg-4 mb-4 mb-lg-0">
                        <h2 class="text-4 mb-3">DTH Recharge</h2>
                        <form id="dthRechargeBill" asp-controller="Customer" asp-action="Payment" method="post">
                            <input type="hidden" name="check" value="1" />
                            <div class="form-group">
                                <select class="custom-select" name="id" id="operator">
                                    <option value="">Select Your Operator</option>
                                    @foreach (var item in ViewBag.Networks)
                                    {
                                        <option value="@item.nspId">@item.nspName</option>
                                    }
                                </select>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" name="PhoneNumber" data-bv-field="number" id="cardNumber" placeholder="Enter Your Card Number">
                            </div>
                            <div class="form-group input-group">
                                <div class="input-group-prepend"><span class="input-group-text">$</span> </div>
                                <input class="form-control" id="amount" name="Price" placeholder="Enter Amount" type="text">
                            </div>
                            <button class="btn btn-primary btn-block" type="submit">Continue to Recharge</button>

                        </form>
                    </div><!-- DTH Recharge end -->
                    <!-- Slideshow
                    ============================================= -->
                    <div class="col-lg-8">
                        <div class="bg-light shadow-md rounded p-4">
                            <form id="view-plans" asp-controller="Service" asp-action="Recharge_bill_datacard" class="form-row mb-4 mb-sm-2" method="post">
                                <div class="col-12 col-sm-6 col-md-3">
                                    <div class="form-group">
                                        <select class="custom-select" id="operator" name="nspId">
                                            <option value="">Select Your Operator</option>
                                            @foreach (var item in ViewBag.Networks)
                                            {
                                                <option value="@item.nspId">@item.nspName</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="col-12 col-sm-6 col-md-3">
                                    <div class="form-group">
                                        <select class="custom-select" name="price">
                                            <option value="">Select Your Price</option>
                                            <option value="20000">20000</option>
                                            <option value="50000">50000</option>
                                            <option value="100000">100000</option>
                                            <option value="200000">200000</option>
                                            <option value="500000">500000</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-12 col-sm-6 col-md-3">
                                    <button class="btn btn-primary btn-block" type="submit" value="submit">View Plans</button>
                                </div>
                            </form>
                            <div class="plans page" style="max-height:450px">
                                <div class="table-responsive-md">
                                    <table class="table table-hover border">
                                        <tbody>
                                            @foreach (var item in ViewBag.Values)
                                            {
                                                <tr>
                                                    <td class="text-5 text-primary text-center align-middle">@item.valueName<span class="text-1 text-muted d-block"></span></td>
                                                    <td class="text-3 text-center align-middle"> $@item.price<span class="text-1 text-muted d-block"> Amount</span></td>
                                                    <td class="text-1 text-muted align-middle">@item.description</td>
                                                    <td class="align-middle"><button class="btn btn-sm btn-outline-primary shadow-none" type="submit">Recharge Now</button></td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div><!-- Slideshow end -->
                }
                else
                {

                    <div class="col-lg-12 mb-4 mb-lg-0">
                        <form id="dthRechargeBill" method="post">

                            <hr />
                            <h3 style="padding-left: 20%;">Please register an account to use this function!</h3>
                            <div><a asp-controller="Home" asp-action="Regester">Đăng kí</a></div>

                        </form>
                    </div><!-- DTH Recharge end -->
                }

            </div>
        </div>
    </section>
